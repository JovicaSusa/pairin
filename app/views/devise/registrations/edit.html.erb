<div class="flex flex-col items-center px-4">
  <div class="w-full md:w-2/6">
    <h2 class="text-center border-b-4 border-black border-dashed text-4xl font-bold mt-8 pb-4 mb-4">
      Edit <%= resource_name.to_s.humanize %>
    </h2>

    <%= simple_form_for(
      resource,
      as: resource_name,
      url: registration_path(resource_name),
      html: { method: :put, class: "flex flex-col items-center w-full" }
    ) do |f| %>
      <div class="form-inputs w-full mt-4 md:mt-6">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: {
                      class: "w-full rounded-md border-2 border-black p-[10px] font-bold shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] outline-none transition-all focus:translate-x-[3px] focus:translate-y-[3px] focus:shadow-none"
                    } %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password,
                    hint: "leave it blank if you don't want to change it",
                    required: false,
                    wrapper_html: {
                      class: "mt-4"
                    },
                    input_html: {
                      autocomplete: "new-password",
                      class: "w-full rounded-md border-2 border-black p-[10px] font-bold shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] outline-none transition-all focus:translate-x-[3px] focus:translate-y-[3px] focus:shadow-none"
                    } %>
        <%= f.input :password_confirmation,
                    required: false,
                    wrapper_html: {
                      class: "mt-4"
                    },
                    input_html: {
                      autocomplete: "new-password",
                      class: "w-full rounded-md border-2 border-black p-[10px] font-bold shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] outline-none transition-all focus:translate-x-[3px] focus:translate-y-[3px] focus:shadow-none"
                    } %>
        <%= f.input :current_password,
                    hint: "we need your current password to confirm your changes",
                    required: true,
                    wrapper_html: {
                      class: "mt-4"
                    },
                    input_html: {
                      autocomplete: "current-password",
                      class: "w-full rounded-md border-2 border-black p-[10px] font-bold shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] outline-none transition-all focus:translate-x-[3px] focus:translate-y-[3px] focus:shadow-none"
                    } %>
      </div>

      <div class="form-actions mt-6">
        <%= f.button :submit, "Update", class: "flex cursor-pointer items-center rounded-md border-2 border-black bg-[#bc95d4] px-10 py-3 font-bold shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transition-all hover:translate-x-[3px] hover:translate-y-[3px] hover:shadow-none" %>
      </div>
    <% end %>

    <div class="mt-12 font-semibold">
      <h3>Cancel my account</h3>

      <div class="font-semibold">
        Unhappy?
        <%= button_to "Cancel my account",
                      registration_path(resource_name),
                      data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
                      method: :delete,
                      class: "flex cursor-pointer items-center rounded-md border-2 border-black bg-[#c9dcd8] px-5 py-1.5 font-bold shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transition-all hover:translate-x-[3px] hover:translate-y-[3px] hover:shadow-none" %>
      </div>

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
