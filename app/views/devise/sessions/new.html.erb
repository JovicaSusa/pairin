<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex flex-col items-center" }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                label_html: {
                  class: "block"
                },
                input_html: {
                  autocomplete: "email",
                  class: "rounded-md border-2 border-black p-[10px] font-bold shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] outline-none transition-all focus:translate-x-[3px] focus:translate-y-[3px] focus:shadow-none"
                } %>
    <%= f.input :password,
                required: false,
                label_html: {
                  class: "block mt-4"
                },
                input_html: {
                  autocomplete: "current-password",
                  class: "rounded-md border-2 border-black p-[10px] font-bold shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] outline-none transition-all focus:translate-x-[3px] focus:translate-y-[3px] focus:shadow-none"
                } %>
    <%= f.input :remember_me, input_html: { class: "mt-4 mr-2 cursor-pointer" }, label_html: { class: "font-bold" }, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "flex cursor-pointer items-center rounded-md border-2 border-black bg-[#bc95d4] px-10 py-3 font-bold shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transition-all hover:translate-x-[3px] hover:translate-y-[3px] hover:shadow-none" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
