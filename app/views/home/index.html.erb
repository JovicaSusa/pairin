<section class="w-full">
  <div class="relative items-center w-full px-5 py-12 mx-auto md:px-12 lg:px-16 max-w-7xl lg:py-24">
    <div class="flex w-full mx-auto text-left">
      <div class="relative inline-flex items-center mx-auto align-middle">
        <div class="text-center">
          <h1 class="max-w-5xl text-6xl leading-tight font-bold tracking-tighter md:text-5xl lg:text-6xl lg:max-w-7xl">
            It's
            <span class="block bg-yellow-300 text-8xl px-4">PAIRIN</span>
            <span>time!</span>
          </h1>
          <h2 class="mt-4 font-semibold">Find pair programming partner quick and easy!</h2>
          <div class="flex justify-center w-full max-w-2xl gap-2 mx-auto mt-16">
            <div class="mt-3 rounded-lg sm:mt-0">
              <%= link_to new_user_registration_path do %>
                <button
                  role="button"
                  aria-label="Click to perform an action"
                  class="flex cursor-pointer items-center rounded-md border-2 border-black bg-[#bc95d4] px-10 py-3 font-bold shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transition-all hover:translate-x-[3px] hover:translate-y-[3px] hover:shadow-none"
                >
                  Sign me in
                </button>
              <% end %>
            </div>
            <div class="mt-3 sm:mt-0 sm:ml-3">
              <button
                role="button"
                aria-label="Click to perform an action"
                class="flex cursor-pointer items-center rounded-md border-2 border-black bg-yellow-300 px-5 py-3 font-bold shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transition-all hover:translate-x-[3px] hover:translate-y-[3px] hover:shadow-none"
              >
                Show me more
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

